const {} = Astro.props
---

<style>
    .component{

        width: 216px;
        height: 216px;

        background: #ECE6F0;
        /* M3/Elevation Light/3 */
        box-shadow: 0px 4px 8px 3px rgba(0, 0, 0, 0.15), 0px 1px 3px rgba(0, 0, 0, 0.3);
        border-radius: 16px;

        /* Inside auto layout */
        flex: none;
        order: 2;
        flex-grow: 0;

    }
</style>


<div class="p-4 bg-primary text-primary-on border shadow-md hover:shadow-xl rounded-2xl">
    <slot/>
</div>
